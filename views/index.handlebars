<div class="container">
        <div class="row">
            <div class="col-sm-12">
            <img src="/assets/img/images.jpeg" class="rounded mx-auto d-block" alt="Hamburger">
            </div>
        </div>
        <div class="row">
                <div class="col-sm-6">
                    <ul class="list-group" id="notEaten">
                        {{#each burgers}}
                            {{#unless devoured}}
                                {{> burgers/burger-block devoured=false}}
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
                <div class="col-sm-6">
                    <ul class="list-group" id="eaten">
                        {{#each burgers}}
                            {{#if devoured}}
                                {{> burgers/burger-block2 devoured=true}}
                            {{/if}}
                        {{/each}}
                      </ul>
                </div>
        </div>
        <div class="row" id="boton">
            <div class="col-sm-12">
             <form>
                <div class="input-group mb-3 form-group">
                    <div class="input-group-prepend">
                    <button class="btn btn-outline-secondary bg-primary text-white add-burger" type="submit" id="button-addon1">Add Burger</button>
                    </div>
                    <input type="text" class="form-control" id="ca" placeholder="Enter a burger you want to eat" aria-label="Example text with button addon" aria-describedby="button-addon1">
                </div>
             </form>
            </div>
        </div>
</div>

